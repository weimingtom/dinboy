	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.controls.DataGrid;
			import mx.core.IUIComponent;
			import mx.events.DragEvent;
			import mx.managers.DragManager;
			
			/**
			 * Set DataGrid to Drop
			 * @param	event
			 */
			private function dataDragEnterHandler(event:DragEvent):void {
					event.preventDefault();
					DragManager.acceptDragDrop(IUIComponent(event.currentTarget));
			}
			
			/**
			 * 
			 * @param	event
			 */
			private function dragDropHandler(event:DragEvent):void 
			{
				event.preventDefault();
				var _xml:XML = dragTree.selectedItem as XML;
				var _xmllist:XMLList = _xml.@ * ;
				var _obj:Object={};
				var i:int ;
				for (i= 0; i < _xmllist.length(); i++) 
				{
					_obj[_xmllist[i].name().toString()] = _xmllist[i];
				}
				ArrayCollection(dragDataGrid.dataProvider).addItem(_obj);
				_obj = null;
				_xml = null;
				_xmllist = null;
					  
			}
			
			/**
			 * 
			 * @param	event
			 */
			private function dragOverHandler(event:DragEvent):void 
			{
				event.preventDefault();
			}
				
			private var _a:int;
		]]>
	</fx:Script>
	
